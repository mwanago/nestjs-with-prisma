generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id       Int     @id @default(autoincrement())
  title    String
  content  String?
  upvotes  Int     @default(0)
  author   User    @relation(fields: [authorId], references: [id])
  authorId Int
}

model Address {
  id      Int    @id @default(autoincrement())
  street  String
  city    String
  country String
  user    User?
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String
  password  String
  articles  Article[]
  address   Address?  @relation(fields: [addressId], references: [id])
  addressId Int?      @unique
}
